<section class="container">
    <article class="col">
        <h3 class="text-center my-5"><a href="{{ path('app_blog_index') }}">Les derniers articles</a></h3>
        <div class="row d-flex justify-content-around">
            {% for article in articles %}

                <div class="col-md-4 lp-card-blog text-center ">
                    <div class="lp-picture mb-2">
                        <a href="{{ path('app_blog_show', {'slug': article.slug}) }}">

                                    {% if article.picture[0].urlName starts with 'lyvia' %}
                                        <img class="img-fluid" src="{{ asset('assets/uploads/pictures/mini/250x250-' ~ article.picture[0].urlName) }}" alt=""><br>
                                    {% else %}
                                        <img class="img-fluid" src="{{ asset('assets/uploads/' ~ article.picture[0].urlName) }}" alt=""><br>
                                    {% endif %}
                            
                        </a>
                    </div>
                    <a href="{{ path('app_blog_show', {'slug': article.slug}) }}">
                        <h4 class="mb-4">{{ article.title | slice(0, 28)  }}...</h4></a>
                        <span class="d-block mt-1">{{ article.category.name }}</span>

                    <p class="d-block mt-4">{{ article.excerpt | slice(0, 100) | raw }}...</p>
                </div>

            {% else %}

                no records found

            {% endfor %}
        </div>
    </article>

</section>