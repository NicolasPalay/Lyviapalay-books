{% extends 'base.html.twig' %}

{% block title %}Ma commande{% endblock %}

{% block body %}
    <h1 class="text-center">Ma commande</h1>
    <div class="container lp-border p-5">
        <div class="row align-items-baseline">

            <div class="col-md-6">
    {% set formHtml %}
{{ form_start(form,{action:path('app_order_recap')}) }}
                <p class="p-3">{{ form_label(form.adresses, 'choississez votre adresses de livraison') }}</p>
        <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
{{ form_row(form.adresses) }}
        {{ form_row(form.carriers) }}
{{ form_end(form) }}
    {% endset %}
    {{ formHtml|replace ({'[br]' : '<br>'})|raw }}
        </div>
            <div class="lp-border col-md-6">

                <p class="p-3"> <strong>Récapitulatif de la commande</strong></p>
                {% for item in items.data %}
                    <ul>
                        <li>{{ item.product.name }}</li>
                        <li>{{ item.quantity }}</li>
                        <li>{{ item.product.price  | number_format(2,',' ,'.')}} €</li>
                    </ul>

                {% else %}
                    <tr>le panier est vide</tr>
                {% endfor %}
                <p>Total: {{ items.total | number_format(2, ',', '.') }} €</p>
            </div>
    </div>

    </div>
{% endblock %}