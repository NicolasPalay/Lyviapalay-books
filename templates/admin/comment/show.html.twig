{% extends 'baseAdmin.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <section class="lp-border mt-5 mx-auto"">
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ comment.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Rgpt</th>
                <td>{{ comment.rgpt ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="lp-btn" href="{{ path('admin_comment_index') }}">back to list</a>

    <a class="lp-btn" href="{{ path('admin_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('admin/comment/_delete_form.html.twig') }}
    </section>
{% endblock %}
