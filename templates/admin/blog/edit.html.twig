{% extends 'baseAdmin.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center ">Edit "{{ blog.title }}"</h1>
    {{ include('admin/blog/_form.html.twig', {'button_label': 'Update'}) }}
    {% if blog.picture %}
        <ul>
            {% for picture in blog.picture %}
        <li><img  src="{{asset('assets/uploads/' ~ picture.urlName) }}"  class="img-fluid lp-sm-img"></li>
        {% endfor %}
        </ul>

    {% endif %}
    <a href="{{ path('admin_blog_index') }}">back to list</a>

    {{ include('admin/blog/_delete_form.html.twig') }}

</div>
{% endblock %}
{% block javascriptsEnd %}

{% endblock %}