{% extends 'base.html.twig' %}

{% block title %}Citation index{% endblock %}

{% block body %}
    <h1>Citation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for citation in citations %}
            <tr>
                <td>{{ citation.id }}</td>
                <td>{{ citation.Author }}</td>
                <td>{{ citation.content }}</td>
                <td>

                    <a href="{{ path('admin_citation_edit', {'slug': citation.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_citation_new') }}">Create new</a>
{% endblock %}
