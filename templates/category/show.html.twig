{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}


        <section class="container my-5">
            <h1 class="h3 ">{{ category.name }}</h1>
            <article class="col">
                <div class="row d-flex justify-content-around">
                    {% for blog in category.blogs %}
                        <div class="col-md-4 lp-card-blog text-center ">
                            <div class="lp-picture mb-2">
                                <a href="{{ path('app_blog_show', {'slug': blog.slug}) }}">
                                    <img  src="{{asset('assets/uploads/' ~ blog.picture[0].urlName) }}"  class="img-fluid" alt="{{ blog.title }}">
                                </a>
                            </div>
                            <a href="{{ path('app_blog_show', {'slug': blog.slug}) }}">
                                <h4 class="mb-4">{{ blog.title | slice(0, 28)  }}...</h4></a>
                            <span class="d-block mt-1">{{ blog.category.name }}</span>

                            <p class="d-block mt-4">{{ blog.excerpt | slice(0, 100) | raw }}...</p>
                        </div>



                    {% endfor %}
                </div>
            </article>


        </section>


{% endblock %}
