{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Title</th>

                <th>CreatedAt</th>

            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>

                <td>{{ blog.title }}</td>


                <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('app_blog_show', {'slug': blog.slug}) }}">show</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
